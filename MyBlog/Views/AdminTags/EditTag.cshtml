@model MyBlog.Models.ViewModels.ForTags.EditTagRequest?

@{
    ViewBag.Title = "Edit Tag";
    Layout = "_Layout";
}

<div class="bg-dark bg-opacity-50 py-2">
    <div class="container">
        <h1 class= "text-light">Edit Tag -Admin Functionality</h1>
    </div>
</div>


<div class="container py-5">
    
    @if (Model != null) {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" id="id" class="form-control" readonly asp-for="Id" required />
                <span class="text-danger" asp-validation-for="Id"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Name Of Tag</label>
                <input type="text" id="nameOfTag" class="form-control" asp-for="NameOfTag" required />
                <span class="text-danger" asp-validation-for="NameOfTag"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Display Name</label>
                <input type="text" id="displayName" class="form-control" asp-for="DisplayName" required />
                <span class="text-danger" asp-validation-for="DisplayName"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-dark">Update Details</button>
            </div>

        </form>
    }
    else {
        <p class="alert">Tag Not Found</p>
    }
    
</div>
