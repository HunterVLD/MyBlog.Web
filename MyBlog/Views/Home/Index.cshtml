@model MyBlog.Models.ViewModels.HomeMergeRequest?

@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                7Vay's Dev Blog
            </h1>
            <p class="lead">
                This blogging site is part of my C# developer portfolio.
                I may publish information about my projects here,
                if I find it appropriate.
                This is my first serious project in ASP.NET
            </p>
        </div>
        
        <div class="col-12 col-lg-6">
            <img 
                src="https://res.cloudinary.com/dbymfwlbd/image/upload/v1703860397/ih54rt8tktnqjzbygfqn.png"
                alt="C# Yeah Baby My Blog" class="d-block mx-lg-auto img-fluid" width="300"/>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 d-flex">
            <!-- todo delete any probably for performance -->
            @if (Model != null && Model.tags.Any()) {
                foreach (var tag in Model.tags) {
                    //todo DO IN <a> 
                    <span class="badge bg-dark me-1">@tag.Name</span>
                }
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <!-- todo delete any probably for performance -->
            @if (Model != null && Model.blogPosts.Any()) {
                foreach (var blogPost in Model.blogPosts) {
                    <div class="mb-5 bg-light box-shadow p-4">
                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading"
                             class="mb-2 d-block img-fluid"/>

                        <h2 class="mb-4 jus">@blogPost.Heading</h2>
                        <p class="mb-3">
                            Author: @blogPost.Author
                            <br/>
                            Published Date: @blogPost.PublishedDate.ToShortDateString()
                        </p>

                        <p class="mb-3">
                            @foreach (var tag in blogPost.Tags) {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>

                        <p class="mb-3">@blogPost.ShortDescription</p>

                        <a class="btn btn-dark"
                           asp-area=""
                           asp-controller="Blogs"
                           asp-action="Index"
                           asp-route-urlHandle="@blogPost.UrlHandle">Read Full Post</a>
                    </div>
                }
            }


        </div>
    </div>
</div>